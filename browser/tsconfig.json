{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "allowJs": true,

    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "alwaysStrict": true,
    "noImplicitAny": false,
    "strict": true,

    "pretty": true,
    "sourceMap": true,
    "rootDir": "./src"
  },
  "include": ["./src"]
}
